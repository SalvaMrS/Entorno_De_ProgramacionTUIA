#!/bin/bash

#mostrar un top 10 de palabras de mas de 4 letras con mas apariciones

#Crear un diccionario con las palabras como claves y la cantidad de apariciones como valores

declare -a PALABRAS

for P in $( cat $1 ); do
	if [[ ${#P} > 3 ]]; then
			PALABRAS=($PALABRAS, $P)
	fi
done

echo $PALABRAS
